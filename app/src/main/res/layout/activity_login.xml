<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/logochat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#8C3C3C"
        android:text="welcome to Phichat"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#8C3C3C"
        android:text="login with your open all account to continue"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="#8C3C3C"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan nama"
        android:textSize="15dp"
        android:inputType="text"
        android:layout_marginTop="330dp"
        android:textColor="#8C3C3C"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="10dp"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="#8C3C3C"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan no telepon"
        android:textSize="15dp"
        android:inputType="text"
        android:layout_marginTop="395dp"
        android:textColor="#8C3C3C"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8C3C3C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="Login"
        android:textColor="@color/white"/>



</RelativeLayout>